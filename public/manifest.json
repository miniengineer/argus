{
  "manifest_version": 2,
  "name": "Argus",
  "version": "0.2",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["tabs", "storage"],
  "browser_action": {
    "default_icon": "data.png",
    "default_popup": "index.html?popup=true",
    "default_title": "Show statistics"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' 'sha256-9eu0F9vWPNKjU/UQEHmt3f6oTJIUGBvI0A0Gh+Bg/5c='; object-src 'self'"
}
